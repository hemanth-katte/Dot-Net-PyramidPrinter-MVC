@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Welcome to pyramid printer</h1>
    <h2>Enter a number and i'll print a pyramid for you</h2>

    <form asp-controller="Home" asp-action="printP" method="post">
